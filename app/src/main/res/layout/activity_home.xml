<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:background="@drawable/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"

    tools:context=".Activity_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="287dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/top_bar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="339dp"
                            android:layout_margin="3dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/indonesia" />

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="291dp"
                            android:layout_margin="3dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/temulawak" />

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="291dp"
                            android:layout_margin="3dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/kunyit" />
                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="291dp"
                            android:layout_margin="3dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/serai" />
                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="291dp"
                            android:layout_margin="3dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/lengkuas" />
                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="291dp"
                            android:layout_margin="3dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/jahe" />
                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="291dp"
                            android:layout_margin="3dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/kencur" />
                        <ImageView
                            android:id="@+id/imageView10"
                            android:layout_width="291dp"
                            android:layout_margin="3dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/pandan" />
                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="291dp"
                            android:layout_margin="3dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/kemangi" />
                        <ImageView
                            android:id="@+id/imageView12"
                            android:layout_width="291dp"
                            android:layout_margin="3dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/mengkudu" />
                        <ImageView
                            android:id="@+id/imageView13"
                            android:layout_width="291dp"
                            android:layout_margin="3dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/lidahbuaya" />

                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView99"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Selamat datang di aplikasi Tanaman Nusantara"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginBottom="20dp"
            android:text="@string/halo" />

        <Button
            android:id="@+id/daftar_tanaman"
            android:onClick="daftar_tanaman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bulet"
            android:layout_margin="7dp"

            android:text="Daftar Tanaman" />

        <Button
            android:id="@+id/tambah_tanaman"
            android:onClick="tambah_tanaman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bulet"
            android:layout_margin="7dp"
            android:text="TAMBAH TANAMAN" />

        <Button
            android:id="@+id/hubungi_kami"
            android:onClick="hubungi_kami"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bulet"
            android:layout_margin="7dp"
            android:text="HUBUNGI KAMI" />

    </LinearLayout>

</RelativeLayout>